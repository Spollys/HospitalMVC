@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Hospital.Models.User

<h4>Registration</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" method="post"> <!-- Changed action to "Register" -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label> <!-- Changed label to English -->
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label> <!-- Changed label to English -->
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width: 150px; text-align: center">Register</button> <!-- Changed button text to English -->
            </div>
            <br />
        </form> 
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
